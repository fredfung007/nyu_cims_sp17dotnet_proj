<head>
    @Styles.RenderFormat(HotelBookingWebsite.Helper.BundlesFormat.PRINT, "~/Reservation/printcss")
</head>
@model HotelBookingWebsite.Models.ConfirmationViewModel

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div id="content" class="print" >
    <h4>You reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Display("Check-in:")
        </dt>
        <dd>
            @Html.Display(@Model.StartDate.Date.ToString("MM/dd/yyyy"))
        </dd>

        <dt>
            @Html.Display("Check-out:")
        </dt>
        <dd>
            @Html.Display(@Model.EndDate.Date.ToString("MM/dd/yyyy") + " (2:00 pm)")
        </dd>

        <dt>
            @Html.Display("Number of Rooms:")
        </dt>
        <dd>
            @Html.Display("1");
        </dd>

        <dt>
            @Html.Display("Total:")
        </dt>
        <dd>
            @Html.Display("$"+ Model.PriceList.Sum().ToString()+".00")
        </dd>

        <dt>
            @Html.Display("Confirmation Number:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReservationId)
        </dd>

        <dt>
            @Html.Display("Room Type:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.Display("Amenities:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ameneties)
        </dd>
    </dl>
    <a href="#" onclick="window.print();return false;">Print this page</a>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
