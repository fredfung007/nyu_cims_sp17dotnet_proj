@model HotelBookingWebsite.Models.ConfirmationViewModel

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>You reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Display("Check-in:")
        </dt>
        <dd>
            @Html.Display(@Model.RoomPriceDetail.StartDate.Date.ToString("MM/dd/yyyy"))
        </dd>

        <dt>
            @Html.Display("Check-out:")
        </dt>
        <dd>
            @Html.Display(@Model.RoomPriceDetail.EndDate.Date.ToString("MM/dd/yyyy") + " (2:00 pm)")
        </dd>

        <dt>
            @Html.Display("Number of Rooms:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model)
        </dd>

        @*<dt>
            @Html.Display("Reservation Name:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model)
        </dd>*@

        <dt>
            @Html.Display("Confirmation Number:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ReservationId)
        </dd>

        <dt>
            @Html.Display("Room Type:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomPriceDetail.Name)
        </dd>

        <dt>
            @Html.Display("Amenities:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.RoomPriceDetail.Ameneties)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
