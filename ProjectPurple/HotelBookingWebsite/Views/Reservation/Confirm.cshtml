<head>
    @Styles.RenderFormat(HotelBookingWebsite.Helper.BundlesFormat.PRINT, "~/Reservation/printcss")
</head>
@model HotelBookingWebsite.Models.ConfirmationViewModel

@{
    ViewBag.Title = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div id="content" class="print" >
    <h4>You reservation</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Check-in:")
        </dt>
        <dd>
            @Model.StartDate.Date.ToString("MM/dd/yyyy")
        </dd>

        <dt>
            @Html.Label("Check-out:")
        </dt>
        <dd>
            @Model.EndDate.Date.ToString("MM/dd/yyyy") (2:00 pm)
        </dd>

        <dt>
            @Html.Label("Number of Rooms:")
        </dt>
        <dd>
            1
        </dd>

        <dt>
            @Html.Label("Total:")
        </dt>
        <dd>
            @Model.PriceList.Sum().ToString("C2")
        </dd>

        <dt>
            @Html.Label("Confirmation Number:")
        </dt>
        <dd>
            <b>@Html.DisplayFor(model => model.ReservationId)</b>
        </dd>

        <dt>
            @Html.Label("Room Type:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.Label("Amenities:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ameneties)
        </dd>
    </dl>
    <a href="#" onclick="window.print();return false;">Print this page</a>
</div>
<p>
    @Html.ActionLink("Back to Search", "Search")
</p>
