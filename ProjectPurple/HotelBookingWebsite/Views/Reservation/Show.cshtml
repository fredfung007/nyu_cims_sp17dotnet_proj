@model HotelBookingWebsite.Models.ConfirmationViewModel

@{
    if (Model.IsCanceled)
    {
        ViewBag.Title = "Your Reservation is Canceled";
    }
    else
    {
        ViewBag.Title = "Your Reservation";
    }
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@Html.AntiForgeryToken()
<div>
    <h4>You reservation details</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            @Html.Label("Check-in:")
        </dt>
        <dd>
            @Model.StartDate.Date.ToString("MM/dd/yyyy")
        </dd>

        <dt>
            @Html.Label("Check-out:")
        </dt>
        <dd>
            @Model.EndDate.Date.ToString("MM/dd/yyyy") (2:00 pm)
        </dd>

        <dt>
            @Html.Label("Number of Rooms:")
        </dt>
        <dd>
            1
        </dd>

        <dt>
            @Html.Label("Total:")
        </dt>
        <dd>
            @Model.PriceList.Sum().ToString("C2")
        </dd>

        <dt>
            @Html.Label("Confirmation Number:")
        </dt>
        <dd>
            <b>@Html.DisplayFor(model => model.ConfirmationId)</b>
        </dd>

        <dt>
            @Html.Label("Room Type:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.Label("Amenities:")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Ameneties)
        </dd>

        <dt>
            @Html.Label("Guests")
        </dt>
        <dd>
            @for (var i = 0; i < Model.Guests.Count; i++)
            {
                @Model.Guests[i].FirstName
                @Model.Guests[i].LastName
                <br/>
            }
        </dd>

    </dl>

    @if (ViewBag.canCancel)
    {
        using (Html.BeginForm())
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cancel" class="btn btn-default"/>
                </div>
            </div>
        }
    }
</div>

<p>
    @Html.ActionLink("Back to Index", "Index", "Home")
</p>