@model HotelBookingWebsite.Models.ConfirmationViewModel

@{
    ViewBag.Title = "Your Reservation is Canceled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

@Html.AntiForgeryToken()
<div>
    <h4>ReservationViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ConfirmationId)
        </dt>
        @if (ViewBag.Error)
        {
            <dd>
                @Html.DisplayFor(model => model.ConfirmationId + " is canceled")
            </dd>

        }
        else
        {
            <dd>
                @Html.DisplayFor(model => model.ConfirmationId + " cannot be canceled")
            </dd>
        }
        
    </dl>
</div>
<p>
    @if (ViewBag.ReturnUrl != null)
    {
        <a href="@ViewBag.ReturnUrl">Return</a>
    }
    else
    {
        @Html.ActionLink("Back to Index", "Index", "Home")
    }

</p>
