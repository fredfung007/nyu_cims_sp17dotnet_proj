@model IEnumerable<HotelBookingWebsite.Models.CheckOutListModel>

<table class="table">
    <tr>
        <th>
            Confirmation #
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Expected Check-In Date
        </th>
        <th>
            Expected Check-Out Date
        </th>
        <th>
            Actual Check-In Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Id.ToString(), "CheckOut", new { ConfirmationNum = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckOutDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActualCheckInDate)
        </td>
    </tr>
}

</table>
