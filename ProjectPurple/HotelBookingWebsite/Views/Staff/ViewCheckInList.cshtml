@using HotelBookingWebsite.Models
@model IEnumerable<HotelBookingWebsite.Models.CheckInListModel>

<table class="table">
    <tr>
        <th>
            Confirmation #
        </th>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Expected Check-In Date
        </th>
        <th>
            Expected Check-Out Date
        </th>
        <th></th>
    </tr>

    @foreach (CheckInListModel item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Id.ToString(), "Operations", new {ConfirmationNum = item.Id})

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckOutDate)
            </td>
        </tr>
    }

</table>